@import "../lib/mixins"

body.stream
   .location-header
      padding: 10px

      background-gradient: #ccc #bbb
      border-bottom: 1px #aaa solid

      h1 
         float: left

         a
            text-decoration: none
            color: #777

      h2 
         float: right

         &.menu
            cursor: pointer
            padding-right: 30px
            background: url("/images/list.png") no-repeat right 1px
            background-size: 20px 20px

   .place-info
      padding: 20px

      color: #fff
      background-gradient: #222 #333
      text-shadow: 1px 1px 1px #000

      .map
         float: right
         padding: 1px 
         margin-left: 20px

         background-color: #fff
         border: 1px #999 solid

         width: 150px
         height: 150px

      h1
         font-size: 1.4em
         line-height: 1.5em
         margin-bottom: 10px

      .things
         .website, .address, .number
            padding-left: 30px
            line-height: 30px
            background-repeat: no-repeat
            background-position: left 1px
            background-size: 20px 20px

            a
               color: #fff

         .website
            background-image: url("/images/globe.png")

         .address
            background-image: url("/images/map.png")
         
         .number
            background-image: url("/images/phone.png")

         @media (max-width: 650px)
            clear: both

   .instagroto, .tweet
      display: block
      position: relative
      text-decoration: none
      color: #444

      background-gradient: #eee #ddd
      border-bottom: 1px #bbb solid

      .tooltip
         opacity: 0
         transition: opacity 0.1s linear;

         position: absolute
         right: -80px
         top: -40px

         img
            width: 100px
            height: 100px

            background-color: #eee
            padding: 1px
            border: 1px #bbb solid

            box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4)

            transform: rotate(5deg)

      &:hover
         background-gradient: #ddd #ccc

         .tooltip
            opacity: 1

      &:active
         background-gradient: #ccc #ddd

   .tweet
      .user
         padding: 10px
         size = 25px

         img
            float: left
            width: size
            height: size

         h2
            margin-left: size + 10px
            line-height: size
            text-overflow: ellipsis;

      p
         padding: 0 10px 10px 10px
         margin: 0

   .instagroto
      .user
         padding: 10px
         size = 25px

         img.profile
            float: left
            width: size
            height: size

         h2
            margin-left: size + 10px
            line-height: size
            text-overflow: ellipsis;

      .caption
         p
            padding: 0 10px 10px 10px
            margin: 0

      img.gram
         display: block
         clear: both 
         margin: 0 auto 10px auto
         padding: 1px

         background-color: #fff
         border: 1px #999 solid

         size = 600px
         width: size
         height: size

         @media (-webkit-min-device-pixel-ratio: 2)
            size = 300px
            width: size
            height: size

   .timeline
      transition: margin-top 0.2s ease-out

   @media (min-width: 702px)
      .timeline
         width: 700px
         margin: 20px auto 0 auto

         border: 1px #bbb solid
         box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4)
