@import "../lib/mixins"

body.search

   .map
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-color: #888

   .search-bar
      position: absolute
      top: 10%
      width: 100%
      text-align: center

      background-color: rgba(150, 150, 150, 0.5)

      .input-box
         display: inline-block
         font-family: 'Voltaire', sans-serif
         margin: 1.7em
         vertical-align: text-bottom

         .text, .input-container
            float: left

         .input-container
            margin: .3em .25em

            input
               height: 1.9em
               width: 16.5em
               font-size: 2em

         .text
            font-size: 4em

         @media screen and (max-width: 1080px)
            .input-container
               margin: .3em .25em

            input
               height: 1.9em
               width: 12.5em
               font-size: 2em
            .text
               font-size: 2.5em

         @media screen and (max-width: 500px)
            .text
               font-size: 2em

      button
         display: block
         clear: both
         margin: 4.5em auto 0 auto
         border-radius 6px

         span
            font-size: 1.5em

   .poop-the-giraffe
      position: absolute
      bottom: 0
      left: 10%

      width: 211px
      height: 511px

      background: url("/images/poop-the-giraffe.png") no-repeat

      transition: background-position-y 0.15s linear

      &:active
         background-position: -213px 6px

   .cityscape
      position: absolute

      bottom: 0
      height: 289px
      width: 100%

      .foreground,
      .middleground,
      .background
         position: absolute

         bottom: 0
         width: 100%

         background: url("/images/cityscape.png") repeat-x

      .foreground
         height: 240px
         background-position: 30px 0

      .middleground
         height: 292px
         background-position: 10px -241px

      .background
         height: 340px
         background-position: 110px -489px