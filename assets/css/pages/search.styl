@import "../lib/mixins"

body.search

   .map
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-color: #888
   
   #lat_long

      #geolocation
         font-size: 1.8em;
         line-height: 1.8em;
         width: 80%;
         margin-left: 5px;
         padding: 0 5px
      button
         font-size: 1.8em;
         line-height: 1.8em;
         width: 15%;
         margin-right: 5px;
         float: right;

   .places
      a
         display: block
         padding 15px

         img 
            height: 35px
            float: left
            margin-left: 5px

         span.name
            display: block
            font-weight: bold
            margin-left: 60px

         span.vic 
            display: block
            margin-left: 60px

   .poop-the-giraffe
      position: absolute
      bottom: 0
      left: 10%

      width: 211px
      height: 511px

      background: url("/images/poop-the-giraffe.png") no-repeat

      transition: background-position-y 0.15s linear

      &:active
         background-position: -213px 6px

   .cityscape

      position: relative
      margin-top: 250px
      height: 289px
      width: 100%

      .foreground,
      .middleground,
      .background
         position: absolute

         bottom: 0
         width: 100%

         background: url("/images/cityscape.png") repeat-x

      .foreground
         height: 240px
         background-position: 30px 0

      .middleground
         height: 292px
         background-position: 10px -241px

      .background
         height: 340px
         background-position: 110px -489px